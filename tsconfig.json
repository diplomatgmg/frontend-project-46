{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceRoot": "./src",
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules"
  ],
  "preset": "ts-jest",
  "testEnvironment": "node"
}
